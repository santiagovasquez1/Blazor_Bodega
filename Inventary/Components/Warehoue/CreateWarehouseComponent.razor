@using Entities
@using Bussines

@inject NavigationManager NavManager
@inject B_Warehouse B_Warehouse

    <div>
        <EditForm Model="@Warehouse">
            <div class="form-group">
                <label>Nombre de la bodega:</label>
                <InputText @bin d-Value="@Warehouse.WarehouseName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Dirección de la bodega:</label>
                <InputTextArea @bind-Value="@Warehouse.WarehouseDress" class="form-control" />
            </div>
            <input type="button" value="Agregar bodega" @onclick="SaveWarehouse" class="but" />
        </EditForm>
    </div>


@code {
    private warehouseEntity Warehouse = new warehouseEntity();

    private void SaveWarehouse()
    {
        Warehouse.WarehouseId = Guid.NewGuid().ToString();
        B_Warehouse.CreateWarehouse(Warehouse);
        NavManager.NavigateTo("warehouse/list");
    }
}
